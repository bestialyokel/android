<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.test.timer.MainActivity"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/control_block"
            android:gravity="center_vertical"
            >
                <TextView
                    android:text="00:00,00"
                    android:layout_gravity="center"
                    android:id="@+id/timer_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="85dp"
                    android:gravity="center_horizontal"

                    />
        </RelativeLayout>

        <GridLayout
            android:id="@+id/control_block"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:columnCount="3"
            android:rowCount="1"
            android:paddingHorizontal="25dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/state_toggle_button"
                android:layout_margin="8dp"
                android:text="@string/start"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center"
                android:onClick="startHandler"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/state_toggle_stop"
                android:layout_margin="8dp"
                android:text="@string/stop"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="center"
                android:onClick="stopHandler"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/state_toggle_reset"
                android:layout_margin="8dp"
                android:text="@string/reset"
                android:layout_column="2"
                android:layout_row="0"
                android:onClick="resetHandler"
                />
        </GridLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>